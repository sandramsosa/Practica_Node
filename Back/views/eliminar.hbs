<div class="container-fluid" style="color: white; height: auto;">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">


            <h1 class="text-center p-2 mt-4">Baja</h1>

           {{#each data}}
          

             <form action="/destinos/eliminar/{{id}}" method="post" enctype="multipart/form-data">
                <div class="form-group my-3">
                    <label for="formGroupExampleInput">Nombre</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su nombre" name="nombre" value="{{nombre}}" disabled>
                </div>
                <div class="form-group my-3">
                    <label for="formGroupExampleInput2">Descripci√≥n</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Ingrese el detalle de la Obra" name="descripcion"  value="{{descripcion}}" disabled>
                </div>
       
                <div class="form-group my-3">
                    <label for="exampleFormControlFile1">Imagen</label>
                    <input type="file" class="form-control" id="exampleFormControlFile1" name="imagen" disabled>
                    <label for="" class="text-white mt-2">{{imagen}}</label>

                    <img src="{{imagen}}" class="mt-2" style="width: 100%;" alt="" >

                </div>

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-secondary btn-block mt-5">Eliminar</button>

                    <a href="/destinos/listado" class="btn btn-secondary btn-block mt-4 mb-4">Retornar</a>
                </div>
            </form>   

            {{/each}}  




        </div>
    </div>
</div>
